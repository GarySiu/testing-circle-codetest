<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>
<div class="content">
  <h1>Shopper - super simple shopping list</h1>
  <ul>
    <% @items.each do |item| %>
      <li><%= item.name %></li>
    <% end %>
  </ul>

  <%= form_with url: items_path  do |form| %>
    <%= form.text_field :name, placeholder: "Please enter an item", :autofocus => true %>
    <%= form.submit "+" %>
  <% end %>
  <%= link_to 'Clear list', items_path,
              data: {:confirm => 'Are you sure?'}, :method => :delete %>
</div>
